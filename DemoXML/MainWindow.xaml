<Window x:Class="DemoXML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoXML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450.4" Width="450">
    <Grid Background="#FF00B7E4">
        <Button x:Name="Btn_Aggiorna" Content="Visualizza Lista" HorizontalAlignment="Left" Height="21" Margin="275,21,0,0" VerticalAlignment="Top" Width="158" Click="Btn_Aggiorna_Click" FontSize="16" FontFamily="Sitka Subheading"/>
        <ListBox x:Name="Lst_Lista" HorizontalAlignment="Left" Height="333" VerticalAlignment="Top" Width="423" Margin="10,78,0,0" FontSize="16" FontFamily="Sitka Subheading"/>
        <Label Content="Cosa guardare stasera" HorizontalAlignment="Left" Height="30" Margin="10,24,0,0" VerticalAlignment="Top" Width="260" FontSize="20" FontFamily="Stencil" Background="{x:Null}" Foreground="Red"/>
        <Button x:Name="Btn_Stop" Content="Stop" HorizontalAlignment="Left" Height="21" Margin="275,47,0,0" VerticalAlignment="Top" Width="158" FontFamily="Sitka Subheading" FontSize="16" Click="Btn_Stop_Click"/>

    </Grid>
</Window>
